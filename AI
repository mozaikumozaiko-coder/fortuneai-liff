  <p id="msg">初期化中…</p>

  <script>
    const LIFF_ID = "2008785783-lGcWXnp5";

    async function main(){
      try{
        await liff.init({ liffId: LIFF_ID });
        document.getElementById("msg").textContent =
          "OK：LIFF初期化成功 / isLoggedIn=" + liff.isLoggedIn();
      }catch(e){
        document.getElementById("msg").textContent =
          "NG：LIFF初期化失敗 → " + (e?.message || e);
      }
    }
    main();
  </script>
